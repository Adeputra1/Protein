<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ge.protein.ui.widget.CurvedFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/login_sunegg_margin_bottom"
                android:layout_marginTop="@dimen/login_sunegg_margin_top"
                android:src="@drawable/ic_sunegg" />
        </FrameLayout>
    </com.ge.protein.ui.widget.CurvedFrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/login_title_margin_top"
        android:text="@string/login_pre_title"
        android:textAppearance="@style/ProteinTextAppearance.Medium.XXL.Primary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:lineSpacingMultiplier="@dimen/line_spacing_multiplier"
        android:text="@string/protein_desc"
        android:textAppearance="@style/ProteinTextAppearance.Regular.M.Secondary" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/login_button_margin_top"
        android:layout_marginBottom="@dimen/login_button_margin_bottom"
        android:drawableLeft="@drawable/ic_dribbble"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:text="@string/login_pre_button"
        android:textAllCaps="false"
        android:textColor="@color/protein_white"
        app:backgroundTint="@color/dribbble_brand_color"/>

</LinearLayout>
